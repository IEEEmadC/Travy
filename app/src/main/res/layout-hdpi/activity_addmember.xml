<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nullify.travi.CreateGroupActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/groupmem_tool"
        android:layout_width="match_parent"
        app:contentInsetStart="0dp"
        app:theme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_alignParentTop="true"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/groupmem_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:background="?attr/actionModeCloseDrawable" />

            <TextView
                android:id="@+id/add_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/groupmem_back"
                android:text="Select Members"
                android:textColor="#000"
                android:textSize="15sp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#9e9e9e9e"/>

            <Button
                android:id="@+id/groumem_done"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:text="done"
                android:textAllCaps="true"
                android:textColor="#000"
                android:textSize="13sp" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/create_group_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/groupmem_tool"
        android:background="@android:color/transparent">
        <ListView
            android:scrollbars="none"
            android:divider="@android:color/transparent"
            android:id="@+id/create_group_travylist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"/>
    </android.support.v4.widget.SwipeRefreshLayout>
</RelativeLayout>

