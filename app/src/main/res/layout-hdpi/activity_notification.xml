<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.Toolbar
        android:id="@+id/notification_toolbar"
        android:layout_width="match_parent"
        app:contentInsetStart="0dp"
        android:background="#f5f5f5"
        app:theme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_alignParentTop="true"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/notification_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:background="?attr/actionModeCloseDrawable" />
            <TextView
                android:layout_toRightOf="@+id/notification_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="Notifications"
                android:textColor="#000"
                android:textSize="17dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#9e9e9e9e"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/warning_notification"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#fff"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/warningimage"
        android:background="@drawable/nonoti"
        android:layout_width="270dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_height="218dp"
        />
        <TextView
            android:id="@+id/warningfirsttext"
            android:layout_below="@+id/warningimage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:text="No notifications"
            android:textColor="#000"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000"
            android:layout_below="@+id/warningfirsttext"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="we will notify you whenever there is\na notification"/>
    </RelativeLayout>
    <GridView
        android:id="@+id/list_notification"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:verticalSpacing="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/notification_toolbar"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/notification_root"
        android:elevation="5dp"
        ></FrameLayout>
</RelativeLayout>