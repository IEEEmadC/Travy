<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/AppTheme.NoActionBar</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">#FFF3F3F3</item>
    </style>

    <style name="AppTheme.NoActionBar2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">#FFF3F3F3</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="TextLabelLogin" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">#b4000000</item>
        <item name="android:textSize">15sp</item>
        <item name="colorAccent">#000</item>
        <item name="colorControlNormal">#000</item>
        <item name="colorControlActivated">#000</item>
    </style>

    <style name="AppTheme.NoActionBar3" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">#FFF3F3F3</item>
        <item name="android:statusBarColor">#e0e0e0</item>
    </style>

    <style name="NavigationViewOwnStyle">
        <item name="android:listPreferredItemHeightSmall">40dp</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="fade_animation">
        <item name="@android:windowEnterAnimation">@anim/popup_show</item>
        <item name="@android:windowExitAnimation">@anim/popup_hide</item>
    </style>

</resources>
